<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nombrecliente_cobranza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/client"
            android:layout_marginStart="10dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:maxLines="1"
            />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">





    </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lbl_fecha_cobranza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_deposito"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/tv_fecha_cobranza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1900-01-01"
                android:layout_marginStart="10dp"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="1900-01-01" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/lbl_recibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receip"
                android:textStyle="bold"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/tv_recibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receip"
                android:layout_marginStart="10dp"
                android:textAppearance="?attr/textAppearanceListItem"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/lbl_monto_cobrado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount"
                android:textStyle="bold"
                android:textAppearance="?attr/textAppearanceListItem"
                />

            <TextView
                android:id="@+id/tv_monto_cobrado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount"
                android:layout_marginStart="10dp"
                android:textAppearance="?attr/textAppearanceListItem"
                />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/lbl_estado_historico_cobranza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:textStyle="bold"
                android:textAppearance="?attr/textAppearanceListItem"
                />
            <TextView
                android:id="@+id/tv_estado_historico_cobranza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:layout_marginStart="10dp"
                android:textAppearance="?attr/textAppearanceListItem"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/lbl_documento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/documents"
                android:textStyle="bold"
                android:textAppearance="?attr/textAppearanceListItem"
                />
            <TextView
                android:id="@+id/tv_documento_cobrado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/documents"
                android:textAppearance="?attr/textAppearanceListItem"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tbl_row_type"
            >
            <TextView
                android:id="@+id/lbl_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type_collection"
                android:textStyle="bold"
                android:textAppearance="?attr/textAppearanceListItem"
                />
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/type_collection"
                android:textAppearance="?attr/textAppearanceListItem"
                />
        </TableRow>
    </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="180dp"
        >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lbl_validacionqrhistoricocobranza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_marginStart="50dp"
            android:textStyle="bold"
            android:text="@string/qr" />

        <TextView
            android:id="@+id/lbl_wsrecibido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/response"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_marginStart="50dp"
            />

        <TextView
            android:id="@+id/lbl_historico_cobranza_respuesta_ws"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mesagge"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:textAppearance="?attr/textAppearanceListItem" />

    </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <CheckBox
                android:id="@+id/chk_validacionqrhistoricocobranza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:layout_marginStart="50dp"
                android:text="" />
            <CheckBox
                android:id="@+id/chk_wsrecibido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:clickable="false"
                android:text="" />
            <ImageView
                android:id="@+id/imv_historico_cobranza_respuesta_ws"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                app:srcCompat="@drawable/ic_insert_comment_black_24dp" />

        </TableRow>
    </TableLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/imv_flecha_historico_cobranza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@mipmap/icons8_chebron_hacia_la_derecha_96" />

</RelativeLayout>