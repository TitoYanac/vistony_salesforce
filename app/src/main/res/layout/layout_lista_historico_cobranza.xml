<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tv_nombrecliente_cobranza"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="10dp"
        android:text="@string/client"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/lbl_nombrecliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:text="@string/client"
        android:textAppearance="?attr/textAppearanceListItem"
         />


    <TextView
        android:id="@+id/tv_fecha_cobranza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="30dp"
        android:text="1900-01-01"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="1900-01-01" />

    <TextView
        android:id="@+id/lbl_fecha_cobranza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="30dp"
        android:text="@string/menu_deposito"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="Deposito" />

    <TextView
        android:id="@+id/lbl_recibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="50dp"
        android:text="@string/receip"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/tv_recibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="50dp"
        android:text="@string/receip"
        android:textAppearance="?attr/textAppearanceListItem"
        />

    <TextView
        android:id="@+id/lbl_monto_cobrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="70dp"
        android:text="@string/amount"
        android:textAppearance="?attr/textAppearanceListItem"
         />

    <TextView
        android:id="@+id/tv_monto_cobrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="70dp"
        android:text="@string/amount"
        android:textAppearance="?attr/textAppearanceListItem"
         />

    <TextView
        android:id="@+id/tv_estado_historico_cobranza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="90dp"
        android:text="@string/status"
        android:textAppearance="?attr/textAppearanceListItem"
         />

    <TextView
        android:id="@+id/lbl_estado_historico_cobranza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="90dp"
        android:text="@string/status"
        android:textAppearance="?attr/textAppearanceListItem"
         />
    <!-- <TextView
        android:id="@+id/lbl_anular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="200dp"
        android:text="ANULAR"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="ANULAR" />-->

    <TextView
        android:id="@+id/lbl_documento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="110dp"
        android:text="@string/documents"
        android:textAppearance="?attr/textAppearanceListItem"
         />

    <TextView
        android:id="@+id/tv_documento_cobrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="110dp"
        android:text="@string/documents"
        android:textAppearance="?attr/textAppearanceListItem"
         />

    <ImageView
        android:id="@+id/imv_anular_historico_cobranza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="50dp"
        android:visibility="invisible"
        app:srcCompat="@mipmap/icons8_cancelar_52" />

    <ImageView
        android:id="@+id/imv_flecha_historico_cobranza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@mipmap/icons8_chebron_hacia_la_derecha_96" />

    <TextView
        android:id="@+id/lbl_validacionqrhistoricocobranza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="140dp"
        android:text="QR"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="QR" />

    <CheckBox
        android:id="@+id/chk_validacionqrhistoricocobranza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="160dp"
        android:clickable="false"
        android:text="" />

    <TextView
        android:id="@+id/lbl_wsrecibido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="140dp"
        android:text="@string/response"
        android:textAppearance="?attr/textAppearanceListItem" />

    <CheckBox
        android:id="@+id/chk_wsrecibido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="160dp"
        android:clickable="false"
        android:text="" />

    <TextView
        android:id="@+id/lbl_historico_cobranza_respuesta_ws"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="140dp"
        android:text="@string/mesagge"
        android:textAppearance="?attr/textAppearanceListItem" />

    <ImageView
        android:id="@+id/imv_historico_cobranza_respuesta_ws"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="165dp"
        app:srcCompat="@drawable/ic_insert_comment_black_24dp" />


</RelativeLayout>