<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:id="@+id/layoutXD"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        >
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/lbl_documento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Documento"
        tools:text="Documento" />

    <TextView
        android:id="@+id/tv_documento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Documento"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="F001-00027538" />

    </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lbl_fecha_emision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F. Emision"
                tools:text="F. Emision" />

            <TextView
                android:id="@+id/tv_fecha_emision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="F. Emision"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="17/06/2019" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lbl_fecha_vencimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F. Vncto."
                tools:text="F. Vncto." />
            <TextView
                android:id="@+id/tv_fecha_vencimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="F. Vencimiento"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="30/06/2019" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lbl_importe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Importe" />
            <TextView
                android:id="@+id/tv_importe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="100000"
                android:textAppearance="?attr/textAppearanceListItem" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lbl_saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo" />

            <TextView
                android:id="@+id/tv_saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="100000"
                android:textAppearance="?attr/textAppearanceListItem" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_moneda_cliente_detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moneda" />

            <TextView
                android:id="@+id/tv_moneda_cliente_detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textAppearance="?attr/textAppearanceListItem" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lbl_terminopago_cliente_detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cond.Venta" />

            <TextView
                android:id="@+id/tv_terminopago_cliente_detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textAppearance="?attr/textAppearanceListItem" />
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/tl_additionaldiscount"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:id="@+id/lbl_additionaldiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/additionaldiscount"
                />
            <ImageView
                android:id="@+id/imv_flag_additionaldiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                app:srcCompat="@drawable/ic_baseline_flag_24" />
            <TextView
                android:id="@+id/tv_additionaldiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="0"
                />
        </TableRow>
    </TableLayout>
    </LinearLayout>
</RelativeLayout>