<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="false"
    android:layout_alignParentTop="false"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:background="@drawable/custom_background_alert"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@android:color/white"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="textMultiLine"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:scrollbars="vertical"
                android:text="TITULO"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_subtitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/white"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="textMultiLine"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:scrollbars="vertical"
                android:text="Valorizacion de Promocion:"
                android:textColor="#000000"
                android:textSize="14dp"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp">
                <TextView
                    android:id="@+id/lbl_tipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="#000000"

                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="TIPO" />
                <TextView
                    android:id="@+id/lbl_contado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="#000000"
                    android:layout_weight="1"

                    android:textStyle="bold"
                    android:text="CONTADO" />
                <TextView
                    android:id="@+id/lbl_credito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingRight="5dp"
                    android:layout_weight="1"
                    android:text="CREDITO" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp">
                    <TextView
                        android:id="@+id/lbl_precio_lista"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_weight="1"
                        android:textAlignment="textStart"
                        android:text="PRECIO" />
                    <TextView
                        android:id="@+id/tv_precio_contado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textAlignment="textEnd"
                        android:layout_weight="1"
                        android:text="PL.CONTADO" />
                    <TextView
                        android:id="@+id/tv_precio_credito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textAlignment="textEnd"
                        android:layout_weight="1"
                        android:text="Pl.CREDITO" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp">
                    <TextView
                        android:id="@+id/lbl_precio_pack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_weight="1"
                        android:textAlignment="textStart"
                        android:text="PACK" />
                    <TextView
                        android:id="@+id/tv_pack_contado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textAlignment="textEnd"
                        android:layout_weight="1"
                        android:text="P.CONTADO" />
                    <TextView
                        android:id="@+id/tv_pack_credito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textAlignment="textEnd"
                        android:layout_weight="1"
                        android:text="P.CREDITO" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp">
                    <TextView
                        android:id="@+id/lbl_descuento_pack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_weight="1"
                        android:textAlignment="textStart"
                        android:text="DSCTO" />
                    <TextView
                        android:id="@+id/tv_descuento_pack_contado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textAlignment="textEnd"
                        android:layout_weight="1"
                        android:text="D.CONTADO" />
                    <TextView
                        android:id="@+id/tv_descuento_pack_credito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textAlignment="textEnd"
                        android:paddingRight="5dp"
                        android:layout_weight="1"
                        android:text="D.CREDITO" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp">
                    <TextView
                        android:id="@+id/lbl_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:text="TOTAL" />
                    <TextView
                        android:id="@+id/tv_total_pack_contado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:text="T.CONTADO" />
                    <TextView
                        android:id="@+id/tv_total_pack_credito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:text="T.CREDITO" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp">
                    <TextView
                        android:id="@+id/lbl_bonificacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textAlignment="textStart"
                        android:layout_weight="1"
                        android:textColor="#D6001C"
                        android:text="BONO" />
                    <TextView
                        android:id="@+id/tv_bono_pack_contado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_weight="1"
                        android:textColor="#D6001C"
                        android:text="B.CONTADO" />
                    <TextView
                        android:id="@+id/tv_bono_pack_credito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:paddingLeft="5dp"
                        android:textColor="#D6001C"
                        android:paddingRight="5dp"
                        android:layout_weight="1"
                        android:text="B.CREDITO" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp">
                    <TextView
                        android:id="@+id/lbl_precio_referencial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textAlignment="textStart"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="#D6001C"
                        android:text="P.PROMO" />
                    <TextView
                        android:id="@+id/tv_precio_referencial_pack_contado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="#D6001C"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="P.CONTADO" />
                    <TextView
                        android:id="@+id/tv_precio_referencial_pack_credito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="#D6001C"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="P.CREDITO" />
                </TableRow>
            </TableLayout>


            <Button
                android:id="@+id/dialogButtonOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:background="@drawable/custom_border_button"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="ACEPTAR"
                android:textColor="#0957C3" />

        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="5dp"
            android:src="@mipmap/logo" />
    </FrameLayout>


</LinearLayout>