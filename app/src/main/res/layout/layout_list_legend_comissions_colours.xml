<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/relative_legends_comissions_colours">


    <TextView
        android:id="@+id/lbl_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="ID:"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="0dp"
        android:text="1"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/lbl_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="Rango:"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_rangeMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="0dp"
        android:text="100"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/lbl_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="0dp"
        android:text="-"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_rangeMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="0dp"
        android:text="100"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textStyle="bold"
        />



    <TextView
        android:id="@+id/lbl_colours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="0dp"
        android:text="Color:"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/imv_circulo_verde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="275dp"
        app:srcCompat="@drawable/ic_baseline_circle_24_gray"
        />
    <TextView
        android:id="@+id/lbl_degrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="0dp"
        android:text="Degrader:"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_degrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="370dp"
        android:layout_marginTop="0dp"
        android:text="SI"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textStyle="bold"
        />

</RelativeLayout>