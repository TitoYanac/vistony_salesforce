<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="false"
    android:layout_alignParentTop="false"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:background="@drawable/custom_background_alert"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@android:color/white"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="textMultiLine"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:scrollbars="vertical"
                android:text="TITULO"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                >
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/lbl_salesorder_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:text="@string/head_codigo"
                        android:textAppearance="?attr/textAppearanceListItem"
                        />

                    <TextView
                        android:id="@+id/tv_salesorder_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:focusable="false"
                        android:text="@string/head_codigo"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textStyle="bold"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lbl_cliente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:text="@string/client"
                        android:textAppearance="?attr/textAppearanceListItem"
                         />

                    <TextView
                        android:id="@+id/tv_cliente"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:text="@string/client"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lbl_seller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:text="@string/seller"
                        android:textAppearance="?attr/textAppearanceListItem" />

                    <TextView
                        android:id="@+id/tv_seller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:text="@string/seller"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lbl_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:text="@string/date"
                        android:textAppearance="?attr/textAppearanceListItem" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/date"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tablerowbalance"
                    >

                    <TextView
                        android:id="@+id/lbl_amount_salesorder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:text="@string/amount"

                        />

                    <TextView
                        android:id="@+id/tv_amount_salesorder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/amount"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"
                        />
                </TableRow>

            </TableLayout>


            <Button
                android:id="@+id/dialogButtonOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:background="@drawable/custom_border_button"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="ACEPTAR"
                android:textColor="#0957C3" />

        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="5dp"
            android:src="@mipmap/logo" />
    </FrameLayout>


</LinearLayout>