                android:visibility="invisible"
                app:srcCompat="@drawable/ic_baseline_edit_24" />-->
            <TextView
                android:id="@+id/lbl_detalle_promocion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Se regala lo siguiente:"
                android:layout_marginStart="10dp"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textAppearance="?attr/textAppearanceListItem"

                android:textStyle="bold" />
            <TextView
                android:id="@+id/lbl_register_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debe agregar el detalle de la promoción, pulsando el icono del lapiz."
                android:layout_marginStart="10dp"
                android:textColor="@color/gray"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textStyle="bold" />
            <LinearLayout
                android:id="@+id/contentpromociondetalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/borde_cuadrado_promocion_detalle"
                android:orientation="vertical"
                android:foreground="?android:attr/selectableItemBackground"

                >
            </LinearLayout>
             <TextView
                  android:id="@+id/lbl_valorizacion"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"

                  android:gravity="center_horizontal"
                  android:text="Cuantos packs desea asignar?"
                  android:textAlignment="center"
                 android:textColor="@color/gray"
                 android:layout_marginStart="10dp"
                  android:textAppearance="?attr/textAppearanceListItem"
                  android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:id="@+id/imv_incrementar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/mas" />

                <TextView
                    android:id="@+id/tv_cant_promocion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:background="@drawable/borde_cuadrado_promocion_cabecera_cantidad"
                    android:digits="0123456789"
                    android:ems="9"
                    android:gravity="center"
                    android:inputType="number"
                    android:singleLine="true"
                    android:text="0"
                    android:textAlignment="center"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="@color/Rojo_Vistony"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imv_decrementar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/menos_96" />

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
