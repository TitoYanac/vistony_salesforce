<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="8dp"
    android:id="@+id/relativeListaPromocionCabecera"
    android:background="@drawable/borde_cuadrado_promocion_cabecera"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_comision_detalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <TextView
                    android:id="@+id/tv_producto_promocion_detalle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Producto1"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:layout_weight="4"
                    />
                <ImageView
                    android:id="@+id/imv_editar_promocion_detalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:srcCompat="@drawable/ic_baseline_edit_24_red"
                    />

                <ImageView
                    android:id="@+id/imv_valorizar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    app:srcCompat="@drawable/ic_baseline_price_check_24_red" />
            </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:id="@+id/lbl_producto_promocion_detalle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Producto1"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textStyle="bold"
                        android:visibility="invisible"
                        android:layout_weight="4"
                        />
                    <TextView
                        android:id="@+id/lbl_update_promocion_detalle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/edit"
                        android:textColor="@color/gray"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/lbl_valorizar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/worth"
                        android:textColor="@color/gray"
                        android:layout_marginStart="10dp"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textStyle="bold"
                        />
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:id="@+id/lbl_pack"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        android:layout_weight="4"
                        android:textSize="20dp"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/lbl_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Por la venta de: "
                        android:textAlignment="center"
                        android:textColor="@color/gray"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:id="@+id/tv_cantidadcompra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Cantidad1"
                    android:textAlignment="center"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_promocion_producto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Producto1"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textStyle="bold" />
            </TableRow>
            </TableLayout>
