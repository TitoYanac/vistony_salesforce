<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ComisionesView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.PronosticoComisionesView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">


                <TextView
                    android:id="@+id/lbl_ano"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="AÃ±o:"
                    />
                <TextView
                    android:id="@+id/tv_ano"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textAlignment="gravity"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/lbl_periodo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="4"
                    android:text="Periodo:"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_periodo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textAlignment="gravity"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textStyle="bold"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtdocumento"
                    style="@android:style/TextAppearance.Widget.TextView"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="4"
                    android:background="@color/colorPrimary"
                    android:text="COMISIONES"
                    android:textAlignment="center"
                    android:textColor="@color/white" />
            </TableRow>


        </TableLayout>


        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="2"
            android:id="@+id/barChartAvanceAnterior"
            />


    </LinearLayout>
    <ListView
        android:id="@+id/listviewAvanceAnterior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp">

    </ListView>

</FrameLayout>