<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeListahistoricofacturasdespachoshistorial"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="false"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="8dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbl_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="Item"
                android:textAppearance="?attr/textAppearanceListItem"
                />


            <TextView
                android:id="@+id/lbl_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="Estado:"
                android:textAppearance="?attr/textAppearanceListItem"
                />

            <TextView
                android:id="@+id/lbl_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="Fecha:"
                android:textAppearance="?attr/textAppearanceListItem" />
            <TextView
                android:id="@+id/lbl_motivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="Motivo:"
                android:textAppearance="?attr/textAppearanceListItem"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:focusable="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="Item1"
                android:textStyle="bold"
                android:textAppearance="?attr/textAppearanceListItem" />


            <TextView
                android:id="@+id/tv_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="estado1"
                android:textStyle="bold"
                android:textAppearance="?attr/textAppearanceListItem"/>

            <TextView
                android:id="@+id/tv_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="fecha1"
                android:textStyle="bold"
                android:textAppearance="?attr/textAppearanceListItem" />
            <TextView
                android:id="@+id/tv_motivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="Motivo1"
                android:textStyle="bold"
                android:textAppearance="?attr/textAppearanceListItem"/>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>