<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ComisionesView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ComisionesView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp">


                <Spinner
                    android:id="@+id/spnano"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="4"
                    android:entries="@array/AÃ±o"
                    android:textAlignment="gravity"
                    android:spinnerMode="dropdown"
                    style="@android:style/Widget.Spinner"


                    />


                <Spinner
                    android:id="@+id/spnmes"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="4"
                    android:entries="@array/Mes"
                    android:textAlignment="gravity"
                    android:spinnerMode="dropdown"
                    style="@android:style/Widget.Spinner"

                    />
                <com.omega_r.libs.OmegaCenterIconButton
                    android:id="@+id/btn_comisiones_consultar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/ic_search_white_24dp"
                    android:background="@drawable/custom_border_button_red"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtdocumento"
                    style="@android:style/TextAppearance.Widget.TextView"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="4"
                    android:background="@color/colorPrimary"
                    android:text="COMISIONES"
                    android:textAlignment="center"
                    android:textColor="@color/white" />
            </TableRow>


        </TableLayout>


        <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:id="@+id/barChart"
            />


    </LinearLayout>
    <ListView
        android:id="@+id/listviewdetallecomisiones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp">

    </ListView>

</FrameLayout>