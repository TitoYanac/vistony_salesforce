<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_orden_venta_cabecera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.OrdenVentaCabeceraView">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="130dp"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/lbl_ruc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:enabled="true"
                    android:hint=""
                    android:text="@string/ruc"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_ruc"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="4"
                    android:background="@drawable/borde_cuadrado"
                    android:enabled="true"
                    android:hint=""
                    android:paddingLeft="10dp"
                    android:text="RUC1:"
                    android:textSize="20dp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbl_cliente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:enabled="true"
                    android:hint=""
                    android:paddingLeft="10dp"
                    android:text="CLIENTE"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_cliente"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="4"
                    android:background="@drawable/borde_cuadrado"
                    android:enabled="true"
                    android:hint=""
                    android:paddingLeft="10dp"
                    android:text="Cliente1:"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbl_direccion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:enabled="true"
                    android:hint=""
                    android:paddingLeft="10dp"
                    android:text="DIRECCIÃ“N"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_direccion"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|center_vertical"

                    android:background="@drawable/borde_cuadrado"
                    android:enabled="true"
                    android:gravity="left|center_vertical"
                    android:hint=""
                    android:paddingLeft="10dp"
                    android:text="@string/tag_select"
                    android:textSize="20dp"
                    android:layout_weight="40"
                    />

                <ImageButton
                    android:id="@+id/btn_consultar_direccion"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/Rojo_Vistony"
                    android:src="@drawable/ic_search_white_24dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbl_moneda"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:enabled="true"
                    android:hint=""
                    android:paddingLeft="10dp"
                    android:text="MONEDA"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/spnmoneda"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:entries="@array/Moneda_Bolivia"
                    android:spinnerMode="dropdown"
                    android:textAlignment="gravity" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <CheckBox
                    android:id="@+id/chk_lista_precios"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:enabled="true"
                    android:hint=""
                    android:text="LISTA DE PRECIOS"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbl_lista_precio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:enabled="true"
                    android:hint=""
                    android:paddingLeft="10dp"
                    android:text="LISTA DE PRECIOS"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_orden_venta_lista_precios"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="4"
                    android:background="@drawable/borde_cuadrado"
                    android:enabled="true"
                    android:gravity="left|center_vertical"
                    android:hint=""
                    android:paddingLeft="10dp"
                    android:text="@string/tag_select"
                    android:textSize="20dp"
                    android:visibility="gone"
                    />

                <ImageButton
                    android:id="@+id/btn_consultar_lista_precios"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/Rojo_Vistony"
                    android:src="@drawable/ic_search_white_24dp"
                    android:visibility="gone"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbl_terminopago"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:enabled="true"
                    android:hint=""
                    android:paddingLeft="10dp"
                    android:text="@string/lbl_orderhed_payterms"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_orden_venta_terminopago"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="4"
                    android:background="@drawable/borde_cuadrado"
                    android:enabled="true"
                    android:gravity="left|center_vertical"
                    android:hint=""
                    android:paddingLeft="10dp"
                    android:text="@string/tag_select"
                    android:textSize="20dp" />

                <ImageButton
                    android:id="@+id/btn_consultar_termino_pago"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/Rojo_Vistony"
                    android:src="@drawable/ic_search_white_24dp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbl_agencia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:enabled="true"
                    android:hint=""
                    android:paddingLeft="10dp"
                    android:text="AGENCIA"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_orden_venta_agencia"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="4"
                    android:background="@drawable/borde_cuadrado"
                    android:enabled="true"
                    android:gravity="left|center_vertical"
                    android:hint=""
                    android:paddingLeft="10dp"
                    android:text="@string/tag_select"
                    android:textSize="20dp" />

                <ImageButton
                    android:id="@+id/btn_orden_venta_consultar_agencia"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/Rojo_Vistony"
                    android:src="@drawable/ic_search_white_24dp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbl_dispatch_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:enabled="true"
                    android:hint=""
                    android:paddingLeft="10dp"
                    android:text="@string/lbl_dispatch_date"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_dispatch_date"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="4"
                    android:background="@drawable/borde_cuadrado"
                    android:enabled="true"
                    android:gravity="left|center_vertical"
                    android:hint=""
                    android:paddingLeft="10dp"
                    android:text="@string/tag_select"
                    android:textSize="20dp" />

                <ImageButton
                    android:id="@+id/btn_dispatch_date"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/Rojo_Vistony"
                    android:src="@drawable/ic_baseline_calendar_month_24" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/et_comentario"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="4"
                    android:background="@drawable/borde_cuadrado"
                    android:enabled="true"
                    android:hint="Ingresar comentario..."
                    android:maxLength="100"
                    android:paddingLeft="10dp"
                    android:textAlignment="center"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom">

                <com.omega_r.libs.OmegaCenterIconButton
                    android:id="@+id/btn_detalle_orden_venta"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@color/Rojo_Vistony"
                    android:drawableLeft="@drawable/ic_baseline_format_list_numbered_24"
                    android:enabled="true"
                    android:text="DETALLE"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </TableRow>
            <TableRow
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:visibility="gone">

                <CheckBox
                    android:id="@+id/chk_descuento_contado"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:enabled="false"
                    android:hint=""
                    android:text="DESCUENTO POR CONTADO"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <Spinner
                    android:id="@+id/sp_cantidaddescuento"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:clickable="false"
                    android:enabled="false"
                    android:spinnerMode="dropdown"
                    android:textAlignment="gravity"
                    android:visibility="invisible" />

            </TableRow>
        </TableLayout>
    </ScrollView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:focusable="false">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="gone">

            <TextView
                android:id="@+id/lbl_orden_cabecera_galonaje"
                style="@android:style/TextAppearance.Widget.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:focusable="false"
                android:text="Galones:"
                android:textColor="@color/white"
                android:textSize="24dp"></TextView>

            <TextView
                android:id="@+id/tv_orden_cabecera_galones"
                style="@android:style/TextAppearance.Widget.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:focusable="false"
                android:gravity="right"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="24dp"></TextView>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_orden_cabecera_subtotal"
                style="@android:style/TextAppearance.Widget.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:focusable="false"
                android:text="SubTotal"
                android:textColor="@color/white"
                android:textSize="24dp"></TextView>

            <TextView
                android:id="@+id/tv_orden_cabecera_subtotal"
                style="@android:style/TextAppearance.Widget.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:focusable="false"
                android:gravity="right"
                android:text="$0"
                android:textColor="@color/white"
                android:textSize="24dp"></TextView>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_orden_cabecera_descuento"
                style="@android:style/TextAppearance.Widget.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:focusable="false"
                android:text="Descuento"
                android:textColor="@color/white"
                android:textSize="24dp"></TextView>

            <TextView
                android:id="@+id/tv_orden_cabecera_descuento"
                style="@android:style/TextAppearance.Widget.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:focusable="false"
                android:gravity="right"
                android:text="$0"
                android:textColor="@color/white"
                android:textSize="24dp"></TextView>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false">

            <TextView
                android:id="@+id/lbl_orden_cabecera_igv"
                style="@android:style/TextAppearance.Widget.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:focusable="false"
                android:text="IVA"
                android:textColor="@color/white"
                android:textSize="24dp"></TextView>

            <TextView
                android:id="@+id/tv_orden_cabecera_igv"
                style="@android:style/TextAppearance.Widget.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:focusable="false"
                android:gravity="right"
                android:text="$0"
                android:textColor="@color/white"
                android:textSize="24dp"></TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false">

            <TextView
                android:id="@+id/lbl_orden_cabecera_total"
                style="@android:style/TextAppearance.Widget.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:focusable="false"
                android:text="Total"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/tv_orden_cabecera_total"
                style="@android:style/TextAppearance.Widget.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:focusable="false"
                android:gravity="right"
                android:text="$0"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold"></TextView>

        </TableRow>
    </TableLayout>

</FrameLayout>