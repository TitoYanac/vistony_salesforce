<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CobranzaView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    tools:context=".View.CobranzaCabeceraView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblgrupo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:text="N°"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etgrupo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:digits="0123456789"
            android:ems="9"
            android:enabled="false"
            android:hint="número de transacción..."
            android:inputType="number"
            android:maxLength="50"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtfecha"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:enabled="false"
            android:text="FECHA"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtbanco"
                    style="@android:style/TextAppearance.Widget.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="BANCO   " />

                <Spinner
                    android:id="@+id/spnbanco"
                    style="@android:style/Widget.Spinner"
                    android:layout_width="280dp"
                    android:layout_height="40dp"

                    android:layout_marginRight="1dp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txttipo"
                    style="@android:style/TextAppearance.Widget.TextView"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="TIPO" />

                <Spinner
                    android:id="@+id/spntipo"
                    style="@android:style/Widget.Spinner"

                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />


            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fechacobrocheque"
                style="@android:style/TextAppearance.Widget.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="F. CHEQUE   "
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imv_calendario_cheque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:enabled="false"
                android:src="@drawable/ic_date_range_black_24dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_fechacobrocheque_edit"
                style="@android:style/TextAppearance.Widget.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:hint=""
                android:text="1900-01-01"
                android:textAlignment="center"
                android:textSize="20dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_fechacobrocheque_edit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:hint=""
                android:text=""
                android:textAlignment="center"
                android:textSize="20dp" />
        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center">

            <CheckBox
                android:id="@+id/chkbancarizado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="BANCARIZADO" />

            <CheckBox
                android:id="@+id/chkdepositodirecto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:clickable="false"
                android:text="Deposito Directo" />
        </TableRow>

        <TextView
            android:id="@+id/txtdocumento"
            style="@android:style/TextAppearance.Widget.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:text="DOCUMENTOS"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="40dp">

            <ListView
                android:id="@+id/listViewCobranzaCabecera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:scrollbarStyle="outsideOverlay">


            </ListView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txttotal"
            style="@android:style/TextAppearance.Widget.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" TOTAL: "
            android:textColor="@color/white"
            android:textSize="30dp"></TextView>

        <TextView
            android:id="@+id/txtsumacobrado"
            style="@android:style/TextAppearance.Widget.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/white"
            android:textSize="30dp"></TextView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="50dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabagregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            app:backgroundTint="@color/Rojo_Vistony"
            app:elevation="100dp"
            android:src="@drawable/ic_baseline_add_24" />

    </RelativeLayout>

</FrameLayout>