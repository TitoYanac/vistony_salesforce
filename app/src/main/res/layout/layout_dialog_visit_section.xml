<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="false"
    android:layout_alignParentTop="false"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:background="@drawable/custom_background_alert"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@android:color/white"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="textMultiLine"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:scrollbars="vertical"
                android:text="@string/duration_visit"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_mensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/selection_section" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_background_alert"
            android:orientation="horizontal">

        </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    >
                    <CheckBox
                        android:id="@+id/chk_start_visitsection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/lbl_layout_visit_section_start"
                        android:layout_weight="1"
                        android:clickable="false"
                        />
                    <CheckBox
                        android:id="@+id/chk_finish_visitsection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:text="@string/lbl_layout_visit_section_finish" />
                </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.omega_r.libs.OmegaCenterIconButton
                    android:id="@+id/btn_start_visitsection"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/custom_border_button_red"
                    android:drawableLeft="@drawable/ic_baseline_play_circle_24_white"
                    android:enabled="true"
                    android:text="@string/start"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginStart="10dp"
 />
                <com.omega_r.libs.OmegaCenterIconButton
                    android:id="@+id/btn_finish_visitsection"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/custom_border_button_red"
                    android:drawableLeft="@drawable/ic_baseline_cancel_24_white"
                    android:enabled="true"
                    android:text="@string/finish"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    />
            </TableRow>
            </TableLayout>
            <Button
                android:id="@+id/dialogButtonOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:background="@drawable/custom_border_button"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="@string/accept"
                android:layout_marginTop="30dp"
                android:textColor="#0957C3" />




        </LinearLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="5dp"
            android:src="@mipmap/logo" />
    </FrameLayout>
</LinearLayout>